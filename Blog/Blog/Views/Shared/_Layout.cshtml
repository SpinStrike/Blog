@using Blog.AppLogic.DTO;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/blogStyle.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <header>
        <div id="header">
            <a id="back-to-top"></a>
            <img src="~/Images/logo.png" alt="logo" id="logo" name="logo">
            <p id="blog-name" name="blog-name">Interesting Blog</p>  
        </div>
    </header>
   <content>
       <div id="content-container">
           <div id="main-content">
               @RenderBody()
           </div>
           <div id="right-sidebar">
               @Html.Partial("Menu")
                   @if (Model.Voting != null)
                   {
                       <div id="votingArea" class="right-siderbar-block">
                           @Html.Partial("Vote", (VotingDto)Model.Voting)
                       </div>
                   }
           </div>
       </div>
       <hr />
       <footer>
           <div>
                <p class="text-center-footer">&copy; @DateTime.Now.Year - Interesting Blog</p>
                <p class="text-center-footer"><a href="#back-to-top" class ="main-font remove-decoration">Вернутся к началу</a></p>
           </div>
       </footer>
</content>
</body>
</html>